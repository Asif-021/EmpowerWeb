{
    "name": "EmpowerWeb",
    "description": "Base Level Extension",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons":{
        "32": "/icon32.png"
    },
    "background": { 
        "service_worker": "worker.js" 
    }, 
    "content_scripts": [ 
        { 
            "matches": ["<all_urls>"], 
            "js": ["content.js"],
            "type": "module",
            "run_at": "document_idle"
        } 
    ],
    "action": {
        "default_popup": "/index.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "tts"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}