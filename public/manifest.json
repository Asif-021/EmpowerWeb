{
    "name": "EmpowerWeb",
    "description": "Base Level Extension",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons":{
        "32": "/icon32.png"
    },
    "background": { 
        "service_worker": "worker.js" 
    }, 
    "content_scripts": [ 
        { 
            "matches": ["<all_urls>"], 
            "js": ["content.js"],
            "type": "module",
            "run_at": "document_idle"
        } 
    ],
    "commands": {
        "toggle-magnifying-glass": {
            "suggested_key": {
            "default": "Ctrl+Shift+1",
            "mac": "Command+Shift+1"
            },
            "description": "Toggle Magnifying Glass"
        }
        },
    "action": {
        "default_popup": "/index.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "tts",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}